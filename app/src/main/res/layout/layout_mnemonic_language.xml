<?xml version="1.0" encoding="utf-8"?>
<com.nex3z.flowlayout.FlowLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flChildSpacing="auto"
        app:flChildSpacingForLastRow="align"
        app:itemSpacing="10dp"
        app:flMinChildSpacing="8dp"
        app:flRowSpacing="8dp">

    <TextView
            android:id="@+id/tv_mnemonic_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"/>

    <TextView
            android:id="@+id/tv_mnemonic_ja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日本語"/>

    <TextView
            android:id="@+id/tv_mnemonic_es"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Español "/>

    <TextView
            android:id="@+id/tv_mnemonic_Hans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中文(简体)"/>

    <TextView

            android:id="@+id/tv_mnemonic_Hant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中文(繁體)"/>

    <TextView
            android:id="@+id/tv_mnemonic_fr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Français"/>

    <TextView
            android:id="@+id/tv_mnemonic_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Italiano"/>

    <TextView

            android:id="@+id/tv_mnemonic_ko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한국어"/>

</com.nex3z.flowlayout.FlowLayout>